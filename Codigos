Puerta 1:
local click = script.Parent.MouseClick

local part = script.Parent.Parent

click:Connect(function()
	if part.CanCollide == true then
		part.CanCollide = false
		part.Transparency = .5
	else
		part.CanCollide = true
		part.Transparency = 0
	end
end)


Puerta 2:
local part = script.Parent

part.Touched:Connect(function()
	part.CanCollide = false
	part.Transparency = .5
end)

part.TouchEnded:Connect(function()
	part.CanCollide = true
	part.Transparency = 0
end)



Puerta 3:
local P = script.Parent

local part = script.Parent.Parent

P.Triggered:Connect(function()
	if P.ActionText == "Abrir" then
		part.CanCollide = false
		part.Transparency = .5
		P.ActionText = "Cerrar"
	else
		part.CanCollide = true
		part.Transparency = 0
		P.ActionText = "Abrir"
	end
end)


Puerta 4:
local click = script.Parent.MouseClick
local part = script.Parent.Parent

click:Connect(function()
	part.Position = Vector3.new(19.582, 6.471, -37.489)
	part.Orientation = Vector3.new(0, 68.84, 0)
	wait(3)
	part.Position = Vector3.new(22.418, 6.471, -34.337)
	part.Orientation = Vector3.new(0,0,0)
end)
